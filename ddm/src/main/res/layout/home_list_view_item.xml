<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <com.example.ddm.appui.view.SquareImageView
            android:id="@+id/pic_sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/txt_sp"
            android:layout_toRightOf="@+id/pic_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/line_color"
            android:text="店名"
            />
        <ImageView
            android:id="@+id/wu_xing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wujiaoxing"
            android:layout_below="@+id/txt_sp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pic_sp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/new_shop"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/xiekuang_xindian"/>
        <TextView
            android:id="@+id/good_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优质好店"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/wu_xing"
            android:layout_toRightOf="@+id/pic_sp"
            android:layout_marginLeft="10dp"/>
        <View
            android:layout_width="230dp"
            android:layout_height="2dp"
            android:layout_below="@+id/good_sp"
            android:layout_toRightOf="@+id/pic_sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layerType="software"
            android:background="@drawable/xu_xian"/>
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/Relative1"
    android:layout_below="@+id/Relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
    <LinearLayout
        android:id="@+id/name"
        android:layout_toRightOf="@+id/pic"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/lianxiren"
            />
        <TextView
            android:id="@+id/sp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="姓名"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/num"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/pic"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/dianhua"
            />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="电话"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/num"
        android:layout_toRightOf="@+id/pic"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/weizhi"
            />
        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:ellipsize="end"

            android:text="位置"/>
    </LinearLayout>
</RelativeLayout>
    <View
        android:layout_below="@+id/Relative1"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</RelativeLayout>