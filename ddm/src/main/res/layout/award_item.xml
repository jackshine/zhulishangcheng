<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
<ImageView
    android:id="@+id/glide_icon"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_margin="10dp"
    android:layout_centerVertical="true"/>
<TextView
    android:id="@+id/goods_name"
    android:layout_toRightOf="@+id/glide_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="苹果"/>
    <TextView
        android:id="@+id/award_code"
        android:layout_toRightOf="@+id/glide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/goods_name"
        android:text="编码"/>
    <TextView
        android:id="@+id/award_time"
        android:layout_toRightOf="@+id/glide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/award_code"
        android:text="时间"/>
    <TextView
        android:id="@+id/award_grade"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text="一等奖"
        android:textSize="18sp"
        android:textColor="@color/line_color"
        android:textStyle="bold"
        android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/award_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:text="奖品编码"/>
    <TextView
        android:id="@+id/get_award"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="立即领取"
        android:padding="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/white"
        android:background="@drawable/def_green_bom"/>
    </RelativeLayout>
</RelativeLayout>