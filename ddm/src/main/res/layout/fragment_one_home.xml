<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="com.example.ddm.onemoney.one.OneHomeFragment">
   <RelativeLayout
       android:id="@+id/app_title_bar"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/red">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
           android:textColor="@color/white"
           android:text="积分夺宝"
           android:textSize="20dp"
          android:textStyle="bold"/>
   </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <fragment
        android:id="@+id/school_fragment_banner"
        android:layout_width="match_parent"
        android:name="com.example.ddm.appui.viewpager.CycleViewPager"
        android:layout_height="170dp"
        tools:layout="@layout/view_cycle_viewpager_content"/>
            <RelativeLayout
                android:layout_marginTop="2dp"
                android:layout_below="@+id/school_fragment_banner"
                android:id="@+id/deal_viewpager_item1_panic_buying_time_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/deal_viewpager_item1_panic_buying_textview"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="center"
                    android:src="@mipmap/duobao"/>
                <ViewFlipper
                    android:id="@+id/marquee_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/deal_viewpager_item1_panic_buying_textview"
                    android:autoStart="true"
                    android:background="#fff"
                    android:flipInterval="2500"
                    android:inAnimation="@anim/anim_marquee_in"
                    android:outAnimation="@anim/anim_marquee_out">
                </ViewFlipper>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layout"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/deal_viewpager_item1_panic_buying_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="晒单分享"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_above="@+id/view1"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/red"/>
                    <View
                        android:id="@+id/view1"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:text="看晒单分享经验"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/xiangji"/>
                </RelativeLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_above="@+id/view2"
                        android:layout_marginLeft="20dp"
                        android:text="最新揭晓"/>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="幸运可能就是你"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiang"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:id="@+id/layout1"
                android:layout_below="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:tabIndicatorColor="@color/red"
                    app:tabSelectedTextColor="@color/red">
                </android.support.design.widget.TabLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v4.view.ViewPager>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
