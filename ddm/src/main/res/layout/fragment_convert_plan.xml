<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.example.ddm.appui.mine.myhome.ConvertPlanFragment">
    <com.example.ddm.appui.widget.AppTitleBar
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img="@drawable/fragment_back_arrow"
        app:bar_title="兑换进度">
    </com.example.ddm.appui.widget.AppTitleBar>
    <RelativeLayout
        android:layout_below="@+id/app_title_bar"
        android:id="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="30dp"
        android:background="@drawable/def_green">
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:layout_above="@+id/view"
           />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:layout_below="@+id/view"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Relative">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="服务费"/>
        <TextView
            android:id="@+id/money_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/Relative1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/divider"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:id="@+id/Relative2"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理进度"/>
        <ImageView
            android:id="@+id/pic"
            android:layout_toRightOf="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/dhjdcg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pic"
            android:layout_marginLeft="15dp"
            android:textColor="@color/green"
            android:text="申请成功"
            android:id="@+id/textView"/>

        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text=""/>

        <View
            android:id="@+id/view2"
            android:layout_marginLeft="15dp"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/green"
            android:layout_toRightOf="@+id/txt"
            android:layout_below="@+id/pic"
            />
        <ImageView
            android:id="@+id/pic_sp"
            android:layout_toRightOf="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/dhjd"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="系统审核中"
            android:layout_below="@+id/view2"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"/>

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text=""/>
        <View
            android:id="@+id/view3"
            android:layout_marginLeft="15dp"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/green"
            android:layout_toRightOf="@+id/txt"
            android:layout_below="@+id/pic_sp"
            />
        <TextView
            android:id="@+id/text_sb"
            android:layout_marginLeft="15dp"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_below="@+id/view3"
           android:background="@color/divider"
            android:layout_toRightOf="@+id/txt"

            />
        <ImageView
            android:id="@+id/pic_zfb"
            android:layout_toRightOf="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_sb"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/dhjdsb"/>
        <TextView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pic_sp"
            android:layout_below="@+id/text_sb"
            android:layout_marginLeft="15dp"
           android:textColor="@color/divider"
            android:text="兑换成功"/>
        <TextView
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_sb"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text=""
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Relative3"
        android:layout_below="@+id/Relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="兑换到"/>
        <TextView
            android:id="@+id/bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_below="@+id/Relative3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/divider"/>
    <RelativeLayout
        android:layout_below="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="兑换编号"/>
        <TextView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>
