<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/pic_sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/txt_sp"
            android:layout_toRightOf="@+id/pic_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/line_color"
            android:text="店名"
            />
        <ImageView
            android:id="@+id/wu_xing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wujiaoxing"
            android:layout_below="@+id/txt_sp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pic_sp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/new_shop"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@mipmap/zhgk"/>
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="距离100m"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/good_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费人数"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/wu_xing"
            android:layout_toRightOf="@+id/pic_sp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
</RelativeLayout>