<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                tools:context="com.example.ddm.appui.home.ShopDetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/shop_name"
                    android:layout_below="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的店铺名"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"/>
                <ImageView
                    android:id="@+id/pic"
                    android:layout_below="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/wujiaoxing"/>
                <TextView
                    android:id="@+id/phone"
                   android:layout_below="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="联系商家"
                   android:padding="6dp"
                   android:textColor="@color/white"
                   android:background="@drawable/def_green_two"
                    android:layout_margin="15dp"/>
                <LinearLayout
                    android:layout_below="@+id/pic"
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/weizhi"
                        />
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="我的位置"/>
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_below="@+id/location"
                    android:layout_width="match_parent"
                    android:background="@color/divider"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/shang_jia"
                  android:layout_below="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家产品"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />
                <com.example.ddm.appui.view.ListViewForScrollView
                    android:layout_below="@+id/shang_jia"
                    android:id="@+id/list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.example.ddm.appui.view.ListViewForScrollView>
<RelativeLayout
    android:id="@+id/Relative"
    android:layout_below="@+id/list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/shop_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_toRightOf="@+id/shop_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/xiala"
        />
</RelativeLayout>
                <View
                    android:id="@+id/view1"
                    android:layout_below="@+id/Relative"
                    android:layout_width="match_parent"
                    android:background="@color/divider"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/user"
                    android:layout_below="@+id/view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户评价"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/appraise"
                    android:layout_toRightOf="@+id/user"
                    android:layout_below="@+id/view1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(345)"/>
<TextView
    android:id="@+id/num"
   android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view1"
    android:layout_marginRight="5dp"
    android:drawablePadding="5dp"
    android:layout_marginTop="10dp"
    android:drawableRight="@mipmap/ic_normal_dot_left"
    />
                <ImageView
                    android:layout_toLeftOf="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wujiaoxing"
                    android:layout_below="@+id/view1"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="13dp"/>
                <RelativeLayout
                    android:id="@+id/Relative1"
                    android:layout_below="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.ddm.appui.view.ZFlowLayout
                        android:id="@+id/flowLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
<com.example.ddm.appui.view.ListViewForScrollView
    android:id="@+id/list_view1"
    android:layout_below="@+id/Relative1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</com.example.ddm.appui.view.ListViewForScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/list_view1">
                    <TextView
                        android:id="@+id/detail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="图文详情"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <WebView
                        android:id="@+id/webview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </WebView>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/layout_zhanwei"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <include
            layout="@layout/nearby_top_home"/>
    </LinearLayout>

</FrameLayout>
