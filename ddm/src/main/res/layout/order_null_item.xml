<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <View
                android:background="@color/black_overlay"
                android:layout_width="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="50dp"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ty"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
            <View
                android:background="@color/black_overlay"
                android:layout_width="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="80dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:background="@color/white"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout">
            <TextView
                android:id="@+id/txt_time"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017........"
                />
            <ImageView
                android:id="@+id/pic"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@mipmap/gengduojiantou"
                android:layout_marginRight="15dp"

                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/pic"
                android:layout_marginRight="5dp"
                android:textColor="@color/red"
                android:text="立即审核"
                />
            <View
                android:id="@+id/divider"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txt_time"
                android:layout_width="match_parent"
                android:background="@color/divider"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/pic_zfb"
                android:layout_below="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/dw"/>
            <TextView
                android:id="@+id/money"
                android:layout_toRightOf="@+id/pic_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/red"
                android:text="100"/>
            <TextView
                android:id="@+id/order"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/pic_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="wwwwwwwww"/>

        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_below="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</RelativeLayout>