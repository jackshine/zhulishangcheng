<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.example.ddm.appui.summary.detail.ConfirmOrderFragment">
    <com.example.ddm.appui.widget.AppTitleBar
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_title="确认订单">
    </com.example.ddm.appui.widget.AppTitleBar>
<RelativeLayout
    android:id="@+id/Relative"
    android:layout_below="@+id/app_title_bar"
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/chose_address"
        android:layout_below="@+id/name"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/goods_address_icon"/>
</RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/Relative"
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_height="10dp"/>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_below="@+id/view"
        android:id="@+id/lrv_public_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/all_shopping"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/def_white"
            android:text="合计:"/>
        <TextView
            android:id="@+id/Submit_Order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/def_green_bom"
            android:text="提交订单"/>
    </LinearLayout>
</RelativeLayout>
