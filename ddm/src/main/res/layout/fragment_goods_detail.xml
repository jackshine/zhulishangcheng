<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.ddm.appui.summary.detail.GoodsDetailFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/banner_viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <LinearLayout
            android:id="@+id/banner_viewpager_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"
            android:orientation="horizontal"/>
    <LinearLayout
        android:id="@+id/layout_zhanwei"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <include
            layout="@layout/nearby_top_home"/>
    </LinearLayout>
    </FrameLayout>
        <RelativeLayout
            android:id="@+id/Relative"
            android:layout_below="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/def_red_bom"
                android:text="货到付款"/>
            <TextView
                android:id="@+id/shop_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/text_1"
                android:text="是地地道道"/>
            <TextView
                android:id="@+id/support"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/shop_detail"
                android:layout_width="wrap_content"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:text="支持"/>
            <TextView
                android:id="@+id/text_2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/shop_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/support"
                android:text="支持"/>
            <TextView
                android:layout_toRightOf="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:layout_below="@+id/shop_detail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:text="三天"/>
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_below="@+id/Relative"
            android:layout_width="match_parent"
            android:background="@color/divider"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <RelativeLayout
            android:id="@+id/Relative1"
            android:layout_below="@+id/view"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/dw"
                android:text="我的会员价"
                android:textColor="@color/red"
                android:drawablePadding="5dp"/>
            <TextView
                android:layout_toRightOf="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/red"
                android:background="@drawable/def_red"
                android:text="会员价"/>
    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/member"
        android:text="市场价"/>
            <TextView
                android:id="@+id/ture_money"
                android:layout_toRightOf="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@mipmap/ic_normal_dot_left"
                android:text="市场价"/>
            <TextView
                android:id="@+id/qiang_hongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可抢红包"
                android:textColor="@color/red"
                android:drawableLeft="@mipmap/integral"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/Relative1"/>
        <RelativeLayout
            android:id="@+id/layout"
           android:layout_below="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="规格"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sku_more"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>
<RelativeLayout
    android:id="@+id/Relative2"
    android:layout_below="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="位置"
        android:drawablePadding="5dp"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/goods_address_icon"/>
    <View
        android:layout_toLeftOf="@+id/phone"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider"/>
    <ImageView
        android:id="@+id/phone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/goods_phone"/>
</RelativeLayout>
        <View
            android:id="@+id/view2"
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/Relative2"/>
<RelativeLayout
    android:id="@+id/Relative3"
    android:layout_below="@+id/view2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="红包规则"/>

    <View
        android:id="@+id/view3"
        android:layout_below="@+id/text_4"
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_margin="10dp"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/hong_bao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:textColor="@color/possible_result_points"
        android:text="红包的领取形式"/>
    <TextView
        android:id="@+id/detail_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hong_bao"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/pot"
        android:drawablePadding="5dp"/>
    <TextView
        android:id="@+id/detail_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_1"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/pot"
        android:drawablePadding="5dp"/>
    <TextView
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_2"
        android:layout_marginTop="10dp"
        android:textColor="@color/possible_result_points"
        android:text="使用说明"
        />
    <TextView
        android:id="@+id/detail_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/explain"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/pot"
        android:drawablePadding="5dp"/>
    <TextView
        android:id="@+id/detail_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_3"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/pot"
        android:drawablePadding="5dp"/>
</RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="上拉查看图文详情"
            android:layout_centerHorizontal="true"
            android:textColor="#777"
            android:drawableLeft="@mipmap/pull_up"
            android:layout_below="@+id/Relative3"
            android:textSize="13sp" />
    </RelativeLayout>
</ScrollView>
