<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/bill_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待发货"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:textColor="@color/search_tab_nomarl"
                android:gravity="center"
                android:drawableTop="@mipmap/zhgk"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/num_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@+id/bill_summary"
                android:background="@mipmap/pot"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:background="@color/divider"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
            android:id="@+id/use_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/yhxz"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/search_tab_nomarl"
            android:text="待收货"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/num_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@+id/use_know"
                android:background="@mipmap/pot"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:background="@color/divider"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
            android:id="@+id/charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待评价"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/search_tab_nomarl"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/zxcz"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/num_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@+id/charge"
                android:background="@mipmap/pot"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>