<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="45dp">
    <RelativeLayout
        android:id="@+id/title_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#00f6f6f6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/location"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fragment_back_arrow"
                android:layout_centerVertical="true"
                />
        <RelativeLayout
            android:id="@+id/top_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/location"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mainactivity_title_position_map">
            <TextView
                android:id="@+id/shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品"
                android:layout_marginLeft="30dp"
                android:textColor="@color/green"
                android:textSize="15sp" />
            <TextView
               android:id="@+id/particulars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_centerInParent="true"
               android:textColor="@color/line_color"
                android:text="评价"/>
            <TextView
                android:id="@+id/appraise1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textColor="@color/line_color"
                android:layout_alignParentRight="true"
                android:text="详情"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/news"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/zxing_p"
            />
        <ImageView
            android:id="@+id/mainactivity_title_position_map"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/news"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/share"
           />
    </RelativeLayout>
</RelativeLayout>