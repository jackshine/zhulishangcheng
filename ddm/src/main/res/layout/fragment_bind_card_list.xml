<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context="com.example.ddm.appui.mine.myhome.BindCardListFragment">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/Relative"
        android:layout_below="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yinhangka"
            android:layout_centerInParent="true"
            android:layout_above="@+id/txt"
            />
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px"
            android:layout_centerInParent="true"
            android:textSize="22px"
            android:textColor="#515151"
            android:text="没有添加银行卡"/>
        <TextView
            android:textSize="20px"
            android:textColor="#9a9a9a"
            android:layout_below="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:layout_centerHorizontal="true"
            android:text="点击右上角可添加银行卡"/>
    </RelativeLayout>
    <com.example.ddm.appui.widget.AppTitleBar
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img="@drawable/fragment_back_arrow"
        app:bar_title="我的银行卡"
        app:action_img="@mipmap/tianjia">
    </com.example.ddm.appui.widget.AppTitleBar>
    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/list_view"
        android:layout_below="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="2dp"
        android:divider="@android:color/white"
        />
</RelativeLayout>
