<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="com.example.ddm.appui.mine.myhome.OfflineFragment">
    <com.example.ddm.appui.widget.AppTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img="@drawable/fragment_back_arrow"
        app:bar_title="申请做单">
    </com.example.ddm.appui.widget.AppTitleBar>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/person_card"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="客户手机:"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/but1"
            android:layout_toRightOf="@+id/person_card"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:inputType="number"
            android:hint="请输入客户手机号"
            />
        <TextView
            android:id="@+id/but1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/green"
            android:text=""
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:visibility="gone"
        android:background="@color/white">
        <TextView
            android:id="@+id/iv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="验证码:"
            />
        <TextView
            android:id="@+id/get_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/sms_text"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/main_tab_on"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/phoneNumEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/get_verify_code"
            android:layout_toRightOf="@+id/iv_username"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="45dp"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textSize="16sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/get_verify_code"
            android:background="@color/gainsboro"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gainsboro"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/content"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="交易密码:"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card_hang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/content"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:hint="请输入交易密码"
            />
        <Button
            android:id="@+id/account_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/clear_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:id="@+id/Relative"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/card_num"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="商品名称:"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/card_num"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:hint="请输入商品名称"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/clear_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/num"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="数量："/>

        <Button
            android:id="@+id/addbt"
            android:layout_toRightOf="@+id/num"
            android:layout_centerVertical="true"
            android:text="-"
            android:textSize="15sp"
            android:background="@drawable/def_white"
            android:layout_width="50dp"
            android:layout_height="30dp"
            />
        <Button
            android:text="+"
            android:id="@+id/subbt"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/def_white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/edt"
            />

        <EditText
            android:id="@+id/edt"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/addbt"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textSize="12dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/card_num_sure"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="单价："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card_num_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/card_num_sure"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:inputType="number"
            android:hint="请输入单价"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/clear_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/subtotal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="小计："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/subtotal"
            android:layout_centerVertical="true"
            android:textColor="@color/title_bar"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="0.00"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/sum"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="实付金额："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sum"
            android:layout_centerVertical="true"
            android:textColor="@color/title_bar"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="0.00"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/remark"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="备注："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/remark"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:hint="请添加备注"
            />
        <Button
            android:id="@+id/btn4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/clear_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <Button
        android:id="@+id/registerInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_password_1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/green"
        android:gravity="center"
        android:padding="10dp"
        android:text="申请做单"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>
