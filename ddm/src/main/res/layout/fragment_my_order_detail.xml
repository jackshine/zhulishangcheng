<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="com.example.ddm.appui.mine.MyOrderDetailFragment">
    <com.example.ddm.appui.widget.AppTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img="@drawable/fragment_back_arrow"
        app:bar_title="订单详情">
    </com.example.ddm.appui.widget.AppTitleBar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/Relative"
        android:layout_below="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="叮当猫"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:text="15738961968"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/chose_address"
            android:layout_below="@+id/name"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wwww"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/goods_address_icon"/>
    </RelativeLayout>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/lrv_public_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
