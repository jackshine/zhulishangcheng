<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_main_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/fragment_bg"
              android:orientation="vertical"
            >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <RadioButton
            android:id="@+id/radioBtn_choiceness"
            style="@style/tab_radiobtn"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/tab_home_select"
            android:gravity="center"
            android:text="首页"
            />

        <RadioButton
            android:id="@+id/radioBtn_buy_car"
            style="@style/tab_radiobtn"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_summary_select"
            android:gravity="center"
            android:text="入驻"
            />

        <RadioButton
            android:id="@+id/radioBtn_find"
            style="@style/tab_radiobtn"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_order_select"
            android:gravity="center"
            android:text="订单"
            />

        <RadioButton
            android:id="@+id/radioBtn_mine"
            style="@style/tab_radiobtn"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_mine_select"
            android:gravity="center"
            android:text="我的"
            />
    </LinearLayout>

</LinearLayout>