<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="com.example.ddm.appui.summary.SummaryFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.example.ddm.appui.widget.AppTitleBar
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_title="客户开店申请表"
        >
    </com.example.ddm.appui.widget.AppTitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/Relative"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="店铺类别"/>
        <TextView
            android:id="@+id/text_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/pic"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiala"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/person_card"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="姓   名："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/person_card"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:hint="请输入您的名字"
            />
        <Button
            android:id="@+id/but1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/clear_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/content"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="联系方式："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card_hang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/content"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:inputType="number"
            android:hint="请输入手机号"
            />
        <Button
            android:id="@+id/account_clear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/clear_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/card_num"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="店铺名称："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/card_num"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:hint="请输入店铺名称"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/clear_text"
            android:visibility="invisible"/>
    </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/address"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="所在地区："
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/text_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:editable="false"
                    android:imeOptions="actionSearch"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/address"
                    android:layout_centerVertical="true"
                    android:textColorHint="@color/lightgray"
                    android:textSize="16sp"
                    android:hint="请输入所在地区"
                    />
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/clear_text"
                    android:visibility="invisible"/>
            </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/card_num_sure"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="店铺地址："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card_num_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/card_num_sure"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:hint="请输入店铺地址"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/clear_text"
            android:visibility="invisible"/>
    </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/WeChat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="微 信 号："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_we_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/WeChat"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:hint="请输入微信号（可空）"
            />
        <Button
            android:id="@+id/btn4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/clear_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注："
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColorHint="@color/lightgray"
        android:hint="请添加备注（可空）"
        android:gravity="top|left"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:background="@drawable/def_white"/>
    <Button
        android:id="@+id/registerInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_password_1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/def_green_bom"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
