<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.example.ddm.appui.widget.AppTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img="@drawable/fragment_back_arrow"
        app:bar_title="转账">
    </com.example.ddm.appui.widget.AppTitleBar>
    <com.example.ddm.appui.view.CircleImageView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_img"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账金额"/>
        <ImageView
            android:id="@+id/pic_money"
            android:layout_below="@id/txt"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cz"/>
        <EditText
            android:id="@+id/edt"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/txt"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:inputType="numberDecimal"
            android:layout_toRightOf="@+id/pic_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
        <View
            android:id="@+id/view"
            android:layout_below="@+id/pic_money"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_margin="10dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/registerInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/def_green_bom"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>
